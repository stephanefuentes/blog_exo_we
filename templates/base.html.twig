<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>
        {% block stylesheets %}
            <link href="https://bootswatch.com/4/darkly/bootstrap.min.css" rel="stylesheet">

        {% endblock %}
    </head>


    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path('list_article') }}">Blog du w.e</a>

        <button aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navbarColor01" data-toggle="collapse" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Features</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Pricing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
            </ul>

            {% dump(app) %}


            <ul class="navbar-nav">

                {% if not is_granted('ROLE_USER') %}

                    <li class="nav-item">
                        <a class="btn btn-primary nt-1" href="{{ path('register') }}">Inscription


                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="btn btn-success nt-1" href="{{ path('security_login') }}">Connexion


                        </a>
                    </li>
                {% else %}

                    <li class="nav-item">
                        connecter en tant que
                        {{ app.user.firstName }}
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-warning nt-1" href="{{ path('security_logout') }}">Deconnexion


                        </a>
                    </li>
                {% endif %}

            </ul>


            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" placeholder="Search" type="text">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>


    <body>
        <div class="container pt-5"> {% block body %}{% endblock %}
            </div>

            {% block javascripts %}{% endblock %}
        </body>
    </html>
