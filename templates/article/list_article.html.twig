{% extends 'base.html.twig' %}

{% block title %}Liste des articles :
{% endblock %}

{% block body %}

    <div class="row">
        {% for article in articles %}

            <div class="col-4">

                <div class="card border-light mb-3">

                    <div class="card-header">
                        <h4 class="card-title">{{ article.title }}</h4>
                    </div>


                    <img src="{{ article.image }}" alt=""/>
                    <div class="card-body">

                        <small>Publié le
                            {{ article.publishedAt | date('d/m/Y H:i')}}</small>
                        <p class="card-text">{{ article.content }}</p>
                        <p style="text-align: center;">{{ article.comments | length  }}

                            commentaires postés</p>
                    </p>
                    <p style="text-align: center;">

                        <a href="{{ path('show_article', {'slug': article.slug}) }}" class="btn btn-success">Voir l'article</a>
                    </p>


                </div>
            </div>
        </div>
    {% endfor %}
</div>{% endblock %}
